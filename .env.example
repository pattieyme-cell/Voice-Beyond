# Voice Beyond Environment Configuration
# Copy this file to .env and configure with your own values

# AI Provider Configuration
# Options: gemini, openai, ollama
AI_PROVIDER=gemini

# API Keys
# Get your free Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: OpenAI API key (if using OpenAI provider)
OPENAI_API_KEY=

# Optional: ElevenLabs API key (for voice cloning)
ELEVENLABS_API_KEY=

# Ollama Configuration (for local AI)
# Install Ollama from https://ollama.ai and run: ollama pull phi3:mini
OLLAMA_URL=http://localhost:11434

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///voice_beyond.db
MONGODB_URI=mongodb://localhost:27017
MONGO_DB_NAME=voice_beyond_db

# Security
# Change this to a random secret key in production!
JWT_SECRET=your-secret-key-change-in-production

# Server Configuration
PORT=5000
FLASK_ENV=development
